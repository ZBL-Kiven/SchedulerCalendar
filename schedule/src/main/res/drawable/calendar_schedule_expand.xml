<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:collapsed="true">

        <layer-list>
            <item android:gravity="center_horizontal">
                <bitmap android:antialias="true" android:gravity="top" android:mipMap="true" android:src="@mipmap/calendar_schedule_down" />
            </item>
            <item android:drawable="@drawable/calendar_schedule_bg" android:top="16dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:gravity="center_horizontal">
                <bitmap android:antialias="true" android:gravity="top" android:mipMap="true" android:src="@mipmap/calendar_schedule_up" />
            </item>
            <item android:drawable="@drawable/calendar_schedule_bg" android:top="16dp" />
        </layer-list>
    </item>

</selector>