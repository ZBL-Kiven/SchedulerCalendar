<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/calendar_schedule_files_item_bg"
    android:paddingStart="16dp"
    android:paddingTop="11dp"
    android:paddingEnd="16dp"
    android:paddingBottom="11dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/calendar_schedule_detail_files_item_iv_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/schedule_file_wps" />

    <TextView
        android:id="@+id/calendar_schedule_detail_files_item_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="#ccffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/calendar_schedule_detail_files_item_iv_type"
        app:layout_constraintTop_toTopOf="@id/calendar_schedule_detail_files_item_iv_type"
        tools:text="Presentation content.doc" />

    <TextView
        android:id="@+id/calendar_schedule_detail_files_item_tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="#99ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/calendar_schedule_detail_files_item_tv_size"
        app:layout_constraintStart_toEndOf="@id/calendar_schedule_detail_files_item_iv_type"
        app:layout_constraintTop_toBottomOf="@id/calendar_schedule_detail_files_item_tv_name"
        tools:text="11-05 18:49    Ownerï¼šMark" />

    <TextView
        android:id="@+id/calendar_schedule_detail_files_item_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99ffffff"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/calendar_schedule_detail_files_item_tv_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/calendar_schedule_detail_files_item_tv_desc"
        tools:text="98.3KB" />


</androidx.constraintlayout.widget.ConstraintLayout>